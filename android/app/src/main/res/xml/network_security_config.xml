<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- minglingchat.com 도메인에 대한 특별 설정 -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">minglingchat.com</domain>
        <domain includeSubdomains="true">www.minglingchat.com</domain>
        <trust-anchors>
            <!-- 시스템 인증서 신뢰 -->
            <certificates src="system"/>
            <!-- 사용자 추가 인증서도 허용 -->
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- 기본적으로 HTTPS만 허용하되 시스템 인증서 신뢰 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config> 